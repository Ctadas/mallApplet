/* pages/product_info/product_info.wxss */
.info-overview{
	background-color: rgb(239,239,239);
}
.swiper-box{
	width: 100%;
    position: relative;
    top: 0;
}
.swiper-box .swiper{
	height: 450rpx;
}
.swiper-box .swiper-item{
	height: inherit;
}
.swiper-box .swiper-item image{
	width: 100%;
	height: inherit;
}
.product-info-box{
	width: 100%;
	margin: 20rpx 0;
	padding:30rpx;
	box-sizing: border-box;
	background-color: #fff;
}
.product-info-box .info-title{
	font-size: 38rpx;
	font-weight: bold;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.product-info-box .info-content{
	display: flex;
	margin: 10rpx 0;
}
.product-info-box .info-content .info-item-box{
	width: 50%;
}
.product-info-box  .item-title{
	color: grey;
}

.product-info-box   .operate-item-box{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content:flex-start;
	margin-top: 10rpx;
}

.product-info-box  .item-specification-box{
	margin-left: 10rpx;
	margin-bottom: 10rpx;
	padding: 10rpx;
	border: 2rpx solid grey;
	color: grey;
}
.product-info-box  .item-specification-box.selected{
	color:#3683d6;
	font-weight: bold;
	border: 4rpx solid #3683d6;
}