/* pages/product_info/product_info.wxss */
.info-overview{
	background-color: rgb(239,239,239);
	height: auto;
}
.swiper-box{
	width: 100%;
    position: relative;
    top: 0;
}
.swiper-box .swiper{
	height: 450rpx;
}
.swiper-box .swiper-item{
	height: inherit;
}
.swiper-box .swiper-item image{
	width: 100%;
	height: inherit;
}
.product-info-box{
	width: 100%;
	margin: 20rpx 0;
	padding:30rpx;
	box-sizing: border-box;
	background-color: #fff;
}
.product-info-box .info-title{
	font-size: 38rpx;
	font-weight: bold;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.product-info-box .info-content{
	display: flex;
	margin: 10rpx 0;
}
.product-info-box .info-content .info-item-box{
	width: 50%;
}
.product-info-box  .item-title{
	color: grey;
}

.product-info-box   .operate-item-box{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content:flex-start;
	margin-top: 10rpx;
}

.product-info-box  .item-specification-box{
	margin-left: 10rpx;
	margin-bottom: 10rpx;
	padding: 10rpx;
	border: 2rpx solid rgb(165, 165, 165);
	color: rgb(165, 165, 165);
}
.product-info-box  .item-specification-box.selected{
	color:#3683d6;
	font-weight: bold;
	border: 4rpx solid #3683d6;
}
.counter-box{
	width: 400rpx!important;
	height: 80rpx!important;
}
.counter-item-box{
	min-height: 80rpx!important;
	line-height: 80rpx!important;
	font-size: 40rpx!important;
}
.counter-symbol-box{
	width: 90rpx!important;
	font-size: 40rpx!important;
}
.btn-box{
	display: flex;
	bottom: 0;
	left:0;
	background-color: white;
	width: 100%;
	padding:20rpx;
	box-sizing: border-box;
	position: fixed;
	justify-content: space-between;
	align-items: center;
}
container-z{
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    background-color: rgb(249,249,249)
}
.theme-color{
	color:#3683d6;
}