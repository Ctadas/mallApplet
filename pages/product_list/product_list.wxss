.order-selected{
	color:#3683d6;
}
.order-unselected{
	color:gray
}
.order-content{
	display: flex;
	justify-content:space-between;
	align-items: center;
}
.order-icon{
	line-height: 50rpx;
	align-self: center;
	font-weight: bold;
}
.card{
	display: flex;
	/* align-items: center; */
	border-bottom:  2rpx solid rgb(211, 211, 211)
}
.item-title{
	font-size: 30rpx;
	font-weight: bold;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.item-content{
	/* margin: 10rpx 0; */
}
.item-info{
	color: grey;
	font-size: 30rpx;
	box-sizing:border-content;
	padding: 5rpx;
	margin: 15rpx 0;
}
.item-price-box{
	display: flex;
	justify-content:space-between;
}
.item-sales{
	color: grey;
	align-self: center;
}
.item-grid{
	padding: 0!important;
}
.theme-color{
	color:#3683d6
}
.order-image{
	width: 20px;
	height: 20px;
}
.card-img{
	width: 200rpx!important;
	height: 200rpx!important;
}
.status-show{
	align-items: center;
	height: 1200rpx;
}