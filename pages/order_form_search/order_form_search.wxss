.order-list-box{
	background-color: rgb(249,249,249);
}
.tab-content{
	height: 100%;
}
.order-title-box{
	display: flex;
	justify-content: space-between;
	padding-bottom: 20rpx;
	border-bottom: 1px dashed #bbbbbb;
}
.order-code{
	color: grey;
}
.total-num{
    margin: 20rpx 0;
	color: #585858;
	text-align: right;
}
.order-status{
	width: 115rpx;
	text-align: right;
	font-size: 28rpx;
}
.order-complete{
	color: #3683d6
}
.order-confirm{
	color: orange
}
.order-paird{
	color: #9bbb6a
}
.order-cancel{
	color: grey;
}
.product-card-box{
	margin: 20rpx auto!important;
}
.item-product-content{
	display: flex;
	margin: 20rpx 0;
	justify-content: space-between;
}
.item-info{
	color: grey;
	font-size: 30rpx;
	box-sizing:border-content;
	padding: 5rpx;
	margin: 15rpx 0;
}
.item-product-image{
	width: 180rpx;
	height: 180rpx;
}
.item-product-box{
	width: 320rpx;
	padding: 0 20rpx;
}
.item-product-box .item-name{
	font-size: 30rpx;
	font-weight: bold;
	display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.item-price-box{
	/* width: 80rpx; */
	text-align: right;
}
.item-purchase_quantity{
	font-size: 24rpx;
	color: grey;
}
.order-btn-box{
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.cancel-btn{
	margin-left: 10rpx;
}
.status-show{
	align-items: center;
	height: 1200rpx;
	background-color:none!important;
	background:none!important;
}
.search-box{
	background-color: white;
}